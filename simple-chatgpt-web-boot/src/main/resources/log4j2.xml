<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>

        <!-- ============================= -->
        <!-- Batch DEBUG -->
        <!-- ============================= -->
        <Logger name="simple.chatgpt.batch" level="DEBUG" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>

        <!-- ============================= -->
        <!-- Other application packages ERROR -->
        <!-- ============================= -->
        <Logger name="simple.chatgpt.config" level="ERROR" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="simple.chatgpt.pojo" level="ERROR" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="simple.chatgpt.filter" level="ERROR" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="simple.chatgpt.service.management.jwt" level="ERROR" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="simple.chatgpt.service.management.security" level="ERROR" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="simple.chatgpt.controller" level="DEBUG" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="simple.chatgpt.mapper" level="ERROR" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>

        <!-- ============================= -->
        <!-- Framework / JDBC / MyBatis ERROR -->
        <!-- ============================= -->
        <Logger name="org.springframework" level="ERROR" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="org.springframework.jdbc" level="ERROR" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="org.springframework.security" level="ERROR" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="org.springframework.web" level="ERROR" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="org.mybatis" level="ERROR" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
    	<!-- Optional: log JDBC parameter binding -->
    	<Logger name="java.sql" level="ERROR" additivity="false">
      		<AppenderRef ref="LogToConsole"/>
    	</Logger>

        <!-- ============================= -->
        <!-- Root logger fallback -->
        <!-- ============================= -->
        <Root level="ERROR">
            <AppenderRef ref="LogToConsole"/>
        </Root>

    </Loggers>
</Configuration>
